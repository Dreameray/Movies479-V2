@model GenreModel
@* Generated from Custom Template. *@

@{
    ViewData["Title"] = "Genre Details";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Message"] is not null)
{
    <p class="bg-info text-dark">@TempData["Message"]</p>
}

<div>
    <h4>Genre</h4>
    <hr />
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        @* Managing many-to-many relationship: getting MovieNames of Movie from the relational Genre through MovieGenres *@
        <dt class="col-2">
            @Html.DisplayNameFor(r => r.MovieNamesOutput)
        </dt>
        <dd class="col-10">
            @Html.Raw(Model.MovieNamesOutput)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>&nbsp;|&nbsp;
    <a asp-action="Index">Back to List</a>
</div>
